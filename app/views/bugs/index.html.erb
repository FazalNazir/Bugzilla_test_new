<table>
  <% @bug.each do |bug| %>
    <tr>
      <td><%= bug.title %></td>
      <td><%= button_to 'Edit', edit_bug_path(bug), method: 'get'%></td>
      <td><%= button_to 'Show', bug_path(bug), method: 'get'%></td>
      <td><%= button_to 'Remove', bug_path(bug), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
