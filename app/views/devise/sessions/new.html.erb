<div class="card p-3 mt-3" >
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email,class:"form-label" %><br />
      <%= f.email_field :email,class:"form-control", placeholder:'Enter your email here', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field form-group">
      <%= f.label :password,class:"form-label" %><br />
      <%= f.password_field :password,class:"form-control", placeholder:'Enter your password here', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,class:"form-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in",class:"btn btn-success" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

